<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #e6e6e6"
    >

    <!-- Barra superior azul -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:background=" #000000
"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tickets ESTG"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Imagem abaixo da barra -->

    <!-- Texto abaixo da imagem -->

    <ImageView
        android:layout_width="259dp"
        android:layout_height="375dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="75dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="77dp"
        android:src="@drawable/imgmenu" />

    <TextView
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore a eficiência em nossa resolução de avarias informáticas através do nosso prático sistema de tickets. Abra um ticket hoje e experimente um suporte técnico ágil e eficaz!"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="19sp"
        android:layout_marginTop="350dp"/>

    <!-- Adicione botões ou links para as principais funcionalidades do seu aplicativo -->
    <Button
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explorar"
        android:layout_marginTop="570dp"
        android:background="@color/cor_primaria"/>

    <Button
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="570dp"
        android:background="@color/cor_secundaria"/>

</RelativeLayout>
