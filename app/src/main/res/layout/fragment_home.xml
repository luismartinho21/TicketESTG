<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Conteúdo da página aqui -->

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <!-- Barra superior azul -->



    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"
        android:background=" #ffffff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tickets ESTG"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="39sp"
            android:textStyle="bold" />



    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="187dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/logo"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="259dp"
        android:layout_height="375dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="80dp"
        android:layout_marginTop="-29dp"
        android:layout_marginEnd="72dp"
        android:src="@drawable/imgmenu" />

    <TextView
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore a eficiência em nossa resolução de avarias informáticas através do nosso prático sistema de tickets. Abra um ticket hoje e experimente um suporte técnico ágil e eficaz!"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:typeface="serif"
        android:justificationMode="inter_word"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="19sp"
        android:layout_marginTop="280dp"/>


    <ImageView
        android:layout_width="249dp"
        android:layout_height="301dp"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="121dp"
        android:layout_marginTop="414dp"
        android:layout_marginEnd="115dp"
        android:src="@drawable/registerhome" />

    <TextView
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Somos especialistas em soluções informáticas abrangentes, oferecendo serviços de reparação e suporte para todo tipo de equipamento, desde hardware até software. Conte conosco para manter seus sistemas operando de maneira eficiente e livre de problemas."
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:typeface="serif"
        android:justificationMode="inter_word"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="19sp"
        android:layout_marginTop="730dp"/>


    <LinearLayout
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background=" #ffffff"
        android:layout_marginTop="950dp"
        android:gravity="center_vertical">


    </LinearLayout>




</RelativeLayout>
    </ScrollView>